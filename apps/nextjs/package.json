{
  "name": "@bbs/nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,json}\"",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@bbs/api": "^0.1.0",
    "@bbs/auth": "^0.1.0",
    "@bbs/db": "^0.1.0",
    "@nextui-org/react": "^2.2.9",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@tanstack/react-query": "^5.8.4",
    "@tanstack/react-query-devtools": "^5.8.4",
    "@tanstack/react-query-next-experimental": "5.8.4",
    "@trpc/client": "next",
    "@trpc/next": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "framer-motion": "^10.16.5",
    "next": "^14.0.3",
    "next-themes": "^0.2.1",
    "lucide-react": "^0.292.0",
    "next-usequerystate": "^1.12.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "superjson": "2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@bbs/eslint-config": "^0.2.0",
    "@bbs/prettier-config": "^0.1.0",
    "@bbs/tailwind-config": "^0.1.0",
    "@bbs/tsconfig": "^0.1.0",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.16",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "tailwindcss": "3.3.5",
    "typescript": "^5.3.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@bbs/eslint-config/base",
      "@bbs/eslint-config/nextjs",
      "@bbs/eslint-config/react"
    ]
  },
  "prettier": "@bbs/prettier-config"
}
